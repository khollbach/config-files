[alias]
    rec = !gitrecurse git
    s = rec status -sb
    si = s --ignored
    p = rec pull --rebase
    f = rec fetch
    l = rec --no-pager log --oneline -n 10

    h = show
    d = diff
    ll = log
    lo = log --oneline
    a = add
    aa = add --all :/
    co = checkout
    b = !git --no-pager branch
    r = remote
    st = stash

    # Note that this is a little different from the bash alias `gc`.
    c = commit

    pu = push

    unstage = reset HEAD --
    last = !git --no-pager log -1 HEAD

    clean-ignored = clean -X
