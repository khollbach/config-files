[alias]
    rec = !gitrecurse git

    s = !gitrecurse git status -sb
    si = !gitrecurse git status -sb --ignored
    p = !gitrecurse git pull --rebase
    f = !gitrecurse git fetch
    l = !gitrecurse git --no-pager log --oneline -n 10
    d = diff
    h = show
    a = add
    aa = add --all :/
    c = commit
    pu = push
    cl = clone
    co = checkout
    ll = log
    lo = log --oneline
    st = stash
    sp = st pop
    sl = st list
    b = !git --no-pager branch
    r = remote

    unstage = reset HEAD --
    last = !git --no-pager log -1 HEAD

    clean-ignored = clean -X
