[alias]
    rec = !gitrecurse git

    s = !gitrecurse git status -sb
    si = !gitrecurse git status -sb --ignored
    p = !gitrecurse git pull --rebase
    f = !gitrecurse git fetch
    l = !gitrecurse git --no-pager log --oneline -n 10
    d = diff
    ds = diff --staged
    h = show
    a = add
    aa = add --all :/
    c = commit
    pu = push
    cl = clone
    co = checkout
    ll = log
    lo = log --oneline
    st = stash
    sp = stash pop
    sl = stash list
    b = !git --no-pager branch
    r = remote
    cb = current-branch

    unstage = reset HEAD --
    last = !git --no-pager log -1 HEAD
    clean-ignored = clean -X
    current-branch = rev-parse --abbrev-ref HEAD

# diff-so-fancy
[core]
    pager = diff-so-fancy | less --tabs=4
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

    # For light terminal backgrounds.
    #oldHighlight = red bold 224
    #newHighlight  = green bold 194
[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
